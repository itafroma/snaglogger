{
    "name": "itafroma/snaglogger",
    "description": "A PSR-3 logger for Bugsnag",
    "homepage": "https://marktrapp.com/projects/snaglogger",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Trapp",
            "email": "mark@marktrapp.com",
            "homepage": "https://marktrapp.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/itafroma/snaglogger/issues",
        "source": "https://github.com/itafroma/snaglogger"
    },
    "require": {
        "php": "~5.6.0 || ~7.0.0 || ~7.1.0",
        "bugsnag/bugsnag": "^3.4",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "scrutinizer/ocular": "^1.3",
        "squizlabs/php_codesniffer": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Itafroma\\Snaglogger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Itafroma\\Snaglogger\\Test\\": "tests/"
        }
    }
}
